pkgname="pritunl"
pkgver="1.13.836.1"
pkgrel="1"
pkgdesc="Enterprise VPN Server"
pkgdesclong=(
    "Enterprise distributed vpn server. Documentation and more information"
    "can be found at pritunl.com"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="all"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/${pkgname}/${pkgname}"
depends:pacman=(
    "python2"
    "python2-flask"
    "python2-pyopenssl"
    "python2-pymongo"
    "net-tools"
    "iproute2"
    "openvpn"
    "bridge-utils"
)
depends:yum=(
    "python2"
    "net-tools"
    "openvpn"
    "bridge-utils"
)
depends:apt=(
    "python"
    "net-tools"
    "openvpn"
    "bridge-utils"
)
makedepends:pacman=(
    "python2-distribute"
    "python2-flask"
    "python2-pyopenssl"
    "python2-pymongo"
)
makedepends:yum=(
    "gcc"
    "python-setuptools"
    "python-virtualenv"
)
makedepends:apt=(
    "gcc"
    "python-dev"
    "python-setuptools"
    "python-virtualenv"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "c0c72158b3b4d08c10a98da5add0a296da088cd18c2d74abea86d47cb59a7853"
)
backup=(
    "etc/${pkgname}.conf"
    "var/log/${pkgname}.log"
    "var/log/${pkgname}.log.1"
)

build:pacman() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-monitor
}
build:yum() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-monitor
}
build:apt() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python setup.py build
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
    go get github.com/pritunl/pritunl-dns
    go get github.com/pritunl/pritunl-monitor
}

package:pacman() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    python2 setup.py install --root="${pkgdir}" --no-upstart
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-monitor ${pkgdir}/usr/bin/${pkgname}-monitor
}
package:yum() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python2 setup.py install --root="${pkgdir}"
    rm -r ${pkgdir}/etc/init.d
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-monitor ${pkgdir}/usr/bin/${pkgname}-monitor
}
package:debian() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}"
    chmod +x ${pkgdir}/etc/init.d/pritunl
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-monitor ${pkgdir}/usr/bin/${pkgname}-monitor
}
package:debian-wheezy() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}" --sysvinit
    chmod +x ${pkgdir}/etc/init.d/pritunl
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
    cp /go/bin/${pkgname}-monitor ${pkgdir}/usr/bin/${pkgname}-monitor
}
