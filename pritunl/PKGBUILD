pkgname="pritunl"
pkgver="1.7.774.46"
pkgrel="1"
pkgdesc="Enterprise VPN Server"
pkgdesclong=(
    "Enterprise distributed vpn server. Documentation and more information"
    "can be found at pritunl.com"
)
maintainer="Pritunl <contact@pritunl.com>"
arch="all"
license=("custom")
section="utils"
priority="optional"
url="https://github.com/${pkgname}/${pkgname}"
depends:pacman=(
    "python2"
    "python2-flask"
    "python2-pyopenssl"
    "python2-pymongo"
    "net-tools"
    "iproute2"
    "openvpn"
    "bridge-utils"
)
depends:yum=(
    "python2"
    "net-tools"
    "openvpn"
    "bridge-utils"
)
depends:apt=(
    "python"
    "net-tools"
    "openvpn"
    "bridge-utils"
)
makedepends:pacman=(
    "python2-distribute"
    "python2-flask"
    "python2-pyopenssl"
    "python2-pymongo"
)
makedepends:yum=(
    "gcc"
    "python-setuptools"
    "python-virtualenv"
)
makedepends:apt=(
    "gcc"
    "python-dev"
    "python-setuptools"
    "python-virtualenv"
)
provides=("${pkgname}")
conflicts=("${pkgname}")
sources=(
    "${url}/archive/${pkgver}.tar.gz"
)
hashsums=(
    "78a467c40a7de5129efb50285320627d44bf8c0477b1bb15d27305c6e3812918"
)
backup=(
    "etc/${pkgname}.conf"
    "var/log/${pkgname}.log"
    "var/log/${pkgname}.log.1"
)

build:pacman() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
    go get github.com/pritunl/pritunl-dns
}
build:yum() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python2 setup.py build
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
}
build:apt() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    python setup.py build
    virtualenv /usr/lib/${pkgname}
    /usr/lib/${pkgname}/bin/pip install -r requirements.txt
}

package:pacman() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    python2 setup.py install --root="${pkgdir}" --no-upstart
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
}
package:yum() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python2 setup.py install --root="${pkgdir}"
    rm -r ${pkgdir}/etc/init.d
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
}
package:debian() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
}
package:ubuntu() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}"
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
}
package:ubuntu-precise() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}" --no-systemd
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
}
package:ubuntu-trusty() {
    cd "${srcdir}/${pkgname}-${pkgver}"
    mkdir -p "${pkgdir}/var/lib/${pkgname}"
    mkdir -p "${pkgdir}/usr/lib/${pkgname}"
    /usr/lib/${pkgname}/bin/python setup.py install --root="${pkgdir}" --no-systemd
    mkdir -p ${pkgdir}/usr/bin
    ln -s /usr/lib/${pkgname}/bin/${pkgname} ${pkgdir}/usr/bin/${pkgname}
    cp -r /usr/lib/${pkgname}/* ${pkgdir}/usr/lib/${pkgname}/
    cp /go/bin/${pkgname}-dns ${pkgdir}/usr/bin/${pkgname}-dns
}

postinst() {
    systemctl daemon-reload &> /dev/null || true
}
